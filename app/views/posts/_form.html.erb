<div class="container-fluid">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-sm-6 col-xs-12">
      <%= form_for(post, html:{multipart:true})  do |f| %>
        <% if post.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
            <ul>
            <% post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
          <div class="form-group ">
            <label class="control-label" for="file">Choose a File</label>
            <label class="btn btn-default btn-file">Browse <%= f.file_field :file, style: 'display: none;' %></label>
          </div>
          <div class="form-group ">
            <label class="control-label" for="name">Post Name</label>
            <%= f.text_field :name, class:'form-control' %>
          </div>
          <div class="form-group ">
            <label class="control-label" for="content">Message</label>
            <%= f.text_area :content, class:'form-control' %>
          </div>
          <div class="form-group">
            <label class="control-label " for="select">Select a Category</label>
            <%= f.collection_select :category_id, Category::all, :id, :name, class:'select form-control' %>
          </div>
          <div class="form-group text-center">
            <div class="actions">
          <%= f.submit class:'btn btn-default' %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
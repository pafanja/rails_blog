        <li>
          <a href="/categories">Categories</a>
        </li>
        <li>
          <a href="<%= new_post_path %>">New Post</a>
        </li>
      </ul>
    </div>
  </div>
</nav>
<header class="intro-header" style="background-image: url(<%= asset_path('about-bg.jpg') %>)">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="site-heading">
          <h1>Blog</h1>
          <hr class="small">
          <span class="subheading">Created with RoR</span>
        </div>
      </div>
    </div>
  </div>
</header>
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <% @posts.each do |post| %>
          <div class="post-preview">
            <h2 class="post-title">
              <%= link_to post.name, post %>
            </h2>
            <h3 class="post-subtitle">
              <%= h truncate( post.content,:length => 80) %>
            </h3>
            <div>
              <img class="img-responsive" src="<%= post.file.url() %>">
            </div>
          <td></td>
            <h4 class="caption text-muted">Category: <%= post.category.name %> |
              <%= link_to 'Delete Post', post, method: :delete, data: { confirm: 'Are you sure?' } %>
            </h4>
          </div>
          <hr>
      <% end %>
    </div>
  </div>
</div>
<footer>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <p class="copyright text-muted">2017</p>
      </div>
    </div>
  </div>
</footer>
